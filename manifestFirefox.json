{
  "manifest_version": 3,
  "name": "GSwitch",
  "version": "1.12",
  "description": "Change Google Search language and country.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/*"],
      "exclude_matches": ["https://www.google.com/maps*"],
      "js": ["contentSearch.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/16.png", "icons/48.png", "icons/128.png", "icons/192.png", "languages.json", "countries.json"],
      "matches": ["https://www.google.com/*"]
    }
  ],
  "browser_specific_settings": {
  "gecko": {
    "id": "{3b85fab0-dc16-4512-912e-fa527ae23ebd}",
    "strict_min_version": "109.0"
  }
}
}


