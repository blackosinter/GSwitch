{
  "manifest_version": 3,
  "name": "GSwitch",
  "version": "1.1",
  "description": "Change Google Search language and country.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/*"],
      "exclude_matches": ["https://www.google.com/maps*"],
      "js": ["contentSearch.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["languages.json", "countries.json", "icons/192.png"],
      "matches": ["https://www.google.com/*"]
    }
  ]
}
